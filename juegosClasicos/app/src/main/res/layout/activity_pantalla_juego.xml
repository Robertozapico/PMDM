<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaJuego"
    android:screenOrientation="landscape">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbarJuego"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <fragment
        android:id="@+id/juegoIzquierdaFragment"
        android:name="com.example.alumnop.juegosclasicos.IzquierdaFragment"
        android:layout_width="150dp"
        android:layout_height="509dp"
        android:layout_below="@+id/my_toolbarJuego"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/juegoDerechaFragment"
        android:layout_toLeftOf="@+id/juegoDerechaFragment" />

    <fragment
        android:id="@+id/juegoDerechaFragment"
        android:name="com.example.alumnop.juegosclasicos.DerechaFragment"
        android:layout_width="475dp"
        android:layout_height="310dp"
        android:layout_below="@+id/my_toolbarJuego"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="0dp" />
    <!--
    <fragment
        android:id="@+id/opcionesFragment"
        android:name="com.example.alumnop.juegosclasicos.OpcionesFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbarOpciones" />
    -->
</RelativeLayout>