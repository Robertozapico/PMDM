<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityJuego">

    <fragment
        android:id="@+id/fragmentTablero"
        android:name="com.example.mastermind.FragmentIzquierda"
        android:layout_width="269dp"
        android:layout_height="698dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_fragment_izquierda" />

    <fragment
        android:id="@+id/fragmentFichas"
        android:name="com.example.mastermind.FragmentDerecha"
        android:layout_width="120dp"
        android:layout_height="691dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentTablero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/fragmentTablero"
        app:layout_constraintTop_toTopOf="@+id/fragmentTablero"
        app:layout_constraintVertical_bias="0.0"
        tools:layout="@layout/fragment_fragment_derecha" />


</android.support.constraint.ConstraintLayout>